<section class="Homeslidertoparea">
    <div class="container">
        <div class="title text-dark text-center pb-5">
            <h3>{{ section.settings.title }} </h3>
        </div>
        <div class="client-slider">


            {%- for block in section.blocks -%}

                <div class="homewrapper-item">
                 
                    <img src="{{ block.settings.bannerimages | img_url: 'original' }}" alt="">
                        <div class="upper-content">
                                <h3>{{ block.settings.title | escape }}</h3>
                                {{ block.settings.content }}
                                <a href=" {{ block.settings.buttonurl}}">{{ block.settings.buttontext | escape }}</a>
                        </div>

                </div>



 
        {% endfor %}

        </div>
    </div>
</section>


{% schema %} 
{
  "name": "Custom Home Banner",
  "tag": "section",
  "class": "custom-homebanner-section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "default": "Slide",
      "label": "Section Title"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Block Custom Home Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "bannerimages",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "content",
          "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the</p>",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "block_title",
          "default": "Title",
          "label": "Block Title"
        },
        {
          "type": "text",
          "id": "button_text",
          "default": "Shop Now",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Home Banner",
      "blocks": [
        {
          "type": "column"
        }
      ]
    }
  ]
}

{% endschema %}